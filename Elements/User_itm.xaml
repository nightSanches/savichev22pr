<UserControl x:Class="savichev22pr.Elements.User_itm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:savichev22pr.Elements"
             mc:Ignorable="d">

    <Border x:Name="border" Opacity="1" Margin="10,5,10,5" Height="100" CornerRadius="7,7,7,7" Background="#FFF1F1F1">
        <Grid>
            <Grid.Resources>
                <ResourceDictionary Source="/Resource/BtnRes.xaml" />
            </Grid.Resources>
            
            <Label Content="ФИО клиента" x:Name="name_user" Margin="19,10,101,0" Foreground="Black" FontFamily="Corbel" HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <Label Content="Номер клиента" x:Name="phone_user" Margin="19,50,101,0" Foreground="Black" FontSize="16" FontFamily="Corbel" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
            <Button Style="{StaticResource BtnRedac}" Background="#FF2C2C2C" Margin="0,5,9.6,0" VerticalAlignment="Top" Height="40" HorizontalAlignment="Right" 
                    Width="63" Click="Click_redact">
                <Image Source="/img/redac.png" Width="20" Height="20"/>
            </Button>
            <Button Style="{StaticResource BtnRedac}" Background="#FFE42828" Margin="0,0,9.6,10" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right"
                    Width="63" Click="Click_remove">
                <Image Source="/img/del.png" Width="20" Height="20"/>
            </Button>
        </Grid>
    </Border>
</UserControl>
